{
  "name": "codefr",
  "displayName": "CodeFr Language Support",
  "description": "Language support for CodeFr - French algorithmic language",
  "version": "0.2.0",
  "publisher": "nitoua",
  "author": {
    "name": "Normich ITOUA",
    "email": "nitoua.dev@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nitoua-21/codefr-vscode"
  },
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "codefr",
    "algorithmic",
    "french",
    "education",
    "programming"
  ],
  "activationEvents": [
    "onLanguage:codefr",
    "onCommand:codefr.run"
  ],
  "main": "./extension.js",
  "contributes": {
    "languages": [
      {
        "id": "codefr",
        "aliases": [
          "CodeFr",
          "codefr"
        ],
        "extensions": [
          ".cfr"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "codefr",
        "scopeName": "source.codefr",
        "path": "./syntaxes/codefr.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "codefr",
        "path": "./snippets/snippets.json"
      }
    ],
    "commands": [
      {
        "command": "codefr.run",
        "title": "Ex√©cuter le fichier CodeFr",
        "category": "CodeFr",
        "icon": "$(play)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceLangId == codefr",
          "command": "codefr.run",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "when": "resourceLangId == codefr",
          "command": "codefr.run",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "codefr.run",
        "key": "f5",
        "when": "resourceLangId == codefr && editorTextFocus"
      }
    ]
  },
  "devDependencies": {
    "@types/vscode": "^1.95.0",
    "@vscode/vsce": "^2.24.0"
  }
}
