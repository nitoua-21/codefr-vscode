{
  "name": "codefr",
  "displayName": "CodeFr Language Support",
  "description": "Language support for CodeFr - French algorithmic language",
  "version": "0.2.0",
  "publisher": "nitoua",
  "author": {
    "name": "Normich ITOUA",
    "email": "nitoua.dev@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nitoua-21/codefr-vscode"
  },
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "codefr",
    "algorithmic",
    "french",
    "education",
    "programming"
  ],
  "contributes": {
    "languages": [
      {
        "id": "codefr",
        "aliases": [
          "CodeFr",
          "codefr"
        ],
        "extensions": [
          ".cfr"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "codefr",
        "scopeName": "source.codefr",
        "path": "./syntaxes/codefr.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "codefr",
        "path": "./snippets/snippets.json"
      }
    ]
  },
  "devDependencies": {
    "@types/vscode": "^1.95.0",
    "@vscode/vsce": "^2.24.0"
  }
}
